<table class="table table-striped">
		<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>follows</th>
			<th><%= link_to user.followings.count, follows_user_path(user.id) %></th>
		</tr>
		<tr>
			<th>followers</th>
			<th><%= link_to user.followers.count, followers_user_path(user.id) %></th>
		</tr>
</table>

<div class="row">
	<% if user == current_user %>
	<%= link_to "" ,edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	<% else %>
	<%= link_to "" ,user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	<% end %>
</div>

<%= render 'relationships/follow', user: user %>