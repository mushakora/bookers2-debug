<div class="container">
  <p id="notice"></p>
  <div class="row">
  <div class="col-xs-3">
   <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
   <% end %>

<h2>User info</h2>
<%= render 'users/profile', user: @user %>
<!--同コントローラーのviewで表示ならusersは省略可 -->

<h2>New book</h2>
<%= render 'books/newform', book: @book %>
</div>

<%= render 'searchs/form' %>

<h2>Books</h2>
<!--books一覧 -->
<div class="col-xs-9">
<table class="table table-striped">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" %>
			</td>
			<td><%= link_to book.title,book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>
<!--books一覧 -->

