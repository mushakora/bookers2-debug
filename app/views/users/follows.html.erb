<div class="container">
  <p id="notice"></p>
  <div class="row">


<h2>follow user</h2>
<!--users一覧 -->
<div class="col-xs-9">
<table class="table table-striped">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @followers.each do |follower|  %>
		<tr>
			<td><%= attachment_image_tag(follower, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= follower.name%></td>
            <td><%= "フォロー数 : #{follower.followings.count}" %></td>
            <td><%= "フォロワー数 : #{follower.followers.count}" %></td>
            <td><%= render'relationships/follow', user: follower %></td>
			<td><%= link_to "Show", user_path(follower.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>